<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="pfund.tpi.tetridroid.Activity.VersusActivityMenu"
    android:orientation="horizontal"
    android:background="@drawable/tetrisbackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/TextViewTitleVersusMenu"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:text="@string/title_activity_versus_activity_menu"
            android:textSize="40sp"
            android:textStyle="bold|italic"
            android:gravity="center_vertical"
            android:textColor="#ffffffff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TextViewPseudo"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="100sp"
                android:text="Pseudo"
                android:textSize="30sp"
                android:textStyle="bold|italic"
                android:gravity="center_vertical"
                android:textColor="#ffffffff" />

            <EditText
                android:id="@+id/PseudoEditText"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="100sp"
                android:hint="Entrez votre pseudo ici"
                android:textSize="20sp"
                android:textColor="#ffffffff" />

        </LinearLayout>

        <Button
            android:id="@+id/modeServerButton"
            android:layout_width="match_parent"
            android:layout_height="90sp"
            android:text="@string/playAsServer"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:background="@color/background_material_dark"
            android:layout_margin="5sp" />

        <Button
            android:id="@+id/modeClientButton"
            android:layout_width="match_parent"
            android:layout_height="90sp"
            android:text="@string/playAsClient"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:background="@color/background_material_dark"
            android:layout_margin="5sp" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="match_parent"
            android:layout_height="90sp"
            android:text="@string/backToMenu"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:background="@color/background_material_dark"
            android:layout_margin="5sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <Space
            android:layout_width="match_parent"
            android:layout_height="200sp" />

        <TextView
            android:id="@+id/descriptionServerTextView"
            android:layout_width="match_parent"
            android:layout_height="90sp"
            android:text="@string/serverDescription"
            android:textSize="30sp"
            android:textStyle="italic"
            android:gravity="center_vertical"
            android:textColor="#ffffffff"
            android:background="#c8000000"
            android:layout_margin="5sp" />

        <TextView
            android:id="@+id/descriptionClientTextView"
            android:layout_width="match_parent"
            android:layout_height="90sp"
            android:text="@string/clientDescription"
            android:textSize="30sp"
            android:textStyle="italic"
            android:gravity="center_vertical"
            android:textColor="#ffffffff"
            android:background="#c8000000"
            android:layout_margin="5sp" />

        <TextView
            android:id="@+id/descriptionBackToMenu"
            android:layout_width="match_parent"
            android:layout_height="90sp"
            android:text="@string/backToMenuDescription"
            android:textSize="30sp"
            android:textStyle="italic"
            android:gravity="center_vertical"
            android:textColor="#ffffffff"
            android:background="#c8000000"
            android:layout_margin="5sp" />

    </LinearLayout>

</LinearLayout>
